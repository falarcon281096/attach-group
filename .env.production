# SMTP configuration for contact form email sending
# Copy this file to `.env.local` and fill in values
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
NEXT_PUBLIC_SITE_URL=https://attach-group.vercel.app
# SMTP server host
SMTP_HOST=smtp.yourprovider.com
# SMTP server port (465 for SSL, 587 for TLS)
SMTP_PORT=587
# Use SSL (true for port 465). If SMTP_PORT=465, secure is assumed.
SMTP_SECURE=false
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password
 
SMTP_FROM=hola@attach.group
 
CONTACT_TO=hola@attach.group

